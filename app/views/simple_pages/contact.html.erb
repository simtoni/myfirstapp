<section class="container contact-section">
  <section class="headlines">
    <h1>contact us</h1>
    <p>get in touch with our team at: hello-placeholder@basics-berlin.com or via contact form.</p>
  </section>

  <%= flash[:notice] %>

  <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
  <div class="row contact-form">
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", required: 'required', placeholder: "Enter Name" %>
    </div>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control", required: 'required', placeholder: "Enter Email" %>
    </div>
    <div class="form-group">
      <%= form.label :message %>
      <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
    </div>
    <%= form.submit "Send", class: "form_label contact-btn" %>

  </div>
  <% end %>
</section>
